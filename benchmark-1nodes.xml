<bench-config xmlns="urn:radargun:benchmark:1.1">

    <master bindAddress="${192.168.2.101:master.address}" port="${2103:master.port}"/>

    <benchmark initSize="1" maxSize="${1:slaves}" increment="1">
        <DestroyWrapper runOnAllSlaves="true"/>
        <StartCluster staggerSlaveStartup="true" delayAfterFirstSlaveStarts="5000" delayBetweenStartingSlaves="500"/>
        <ClusterValidation partialReplication="false"/>
        <StressTestWarmup numRequests="50000" opsCountStatusLog="500" numThreads="6"/>
        <ClearCluster/>
        <!--
           This will average to 10000 requests per thread, although a work-stealing pattern is used so some threads may
           do more work than others.
         -->
        <StressTest numRequests="10000000" opsCountStatusLog="5000" numThreads="12"/>
        <CsvReportGeneration/>
    </benchmark>

    <products>
        <infinispan52>
            <config name="dist-sync.xml"/>
        </infinispan52>
        <infinispan60>
            <config name="dist-sync.xml"/>
        </infinispan60>

        <hazelcast2>
            <config name="dist-sync.xml"/>
        </hazelcast2>
        <hazelcast30>
            <config name="dist-sync.xml"/>
        </hazelcast30>
        <hazelcast31>
            <config name="dist-sync.xml"/>
        </hazelcast31>
        <hazelcast32>
            <config name="dist-sync.xml"/>
        </hazelcast32>
        <hazelcast33>
            <config name="dist-sync.xml"/>
        </hazelcast33>
        <hazelcast331>
            <config name="dist-sync.xml"/>
        </hazelcast331>

        <!-- gridgain60>
            <config name="local.xml"/>
        </gridgain60 -->
        <!-- gridgain62>
            <config name="local.xml"/>
        </gridgain62 -->
    </products>

    <reports>
        <report name="All" includeAll="true"/>
    </reports>

</bench-config>
