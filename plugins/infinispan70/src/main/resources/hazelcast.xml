<?xml version="1.0" encoding="UTF-8"?>

<infinispan
      xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      xsi:schemaLocation="urn:infinispan:config:7.0 http://www.infinispan.org/schemas/infinispan-config-7.0.xsd"
      xmlns="urn:infinispan:config:7.0">
   <jgroups>
      <stack-file name="jgroupsStack" path="default-configs/default-jgroups-udp.xml"/>
   </jgroups>

   <cache-container name="default" default-cache="default">
      <transport stack="jgroupsStack" lock-timeout="600000" cluster="default"/>
      <serialization/>
      <jmx>
         <property name="enabled">true</property>
      </jmx>

      <distributed-cache name="default" mode="SYNC" remote-timeout="60000" statistics="true" l1-lifespan="-1"
                         owners="2" segments="512">
         <transaction transaction-manager-lookup="org.infinispan.transaction.lookup.GenericTransactionManagerLookup"
                      mode="NONE"/>
      </distributed-cache>

      <distributed-cache name="transactional" mode="SYNC" remote-timeout="60000" statistics="true" l1-lifespan="-1"
                         owners="2" segments="512">
         <transaction transaction-manager-lookup="org.infinispan.transaction.lookup.GenericTransactionManagerLookup"
                      mode="FULL_XA"/>
      </distributed-cache>
   </cache-container>

</infinispan>
